        <Button android:id="@+id/btn_dot" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="." android:textSize="28sp" android:backgroundTint="#828282" android:textColor="@color/black"/>
        <Button android:id="@+id/btn_equal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:text="=" android:textSize="28sp" android:backgroundTint="#828282" android:textColor="@color/black"/>
    </LinearLayout>
